{
  "short_name": "Discrub",
  "name": "Discrub",
  "version": "1.8.7",
  "description": "A data manipulation and export tool for Discord.",
  "manifest_version": 3,
  "permissions": [],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Open Discrub"
  },
  "content_scripts": [
    {
      "matches": ["*://discord.com/*"],
      "js": ["./static/js/content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "matches": ["*://discord.com/*"],
      "resources": [
        "index.html",
        "injected_button.html",
        "injected_dialog.html"
      ]
    }
  ],
  "icons": {
    "16": "discrub2.png",
    "32": "discrub2.png",
    "48": "discrub2.png",
    "128": "discrub2.png"
  }
}
